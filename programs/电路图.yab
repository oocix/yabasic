?@(7,3)"画电路图":?:?"进去后: 上下左右依次为   : 播放,停止,上曲,下曲.":?:?"背光使用菜单.":?"上曲上选,下曲下选,背光确认.":?".剩下的大家自己看吧.":?:?"  ^_^":?"             Said by Moyu."inkey$:clear screenx=70:y=120:c=1:xx=1label dian?@(1,1)"(",x,",",y,")"?@(1,2)"*移动*电阻*电源*开关*退出"if c=1 then:circle x,y,1:dot x,y:filabel lrk$=inkey$if k$="keya3" theny=y-1:goto dianelsif k$="keya4" theny=y+1:goto dianelsif k$="keya5" thenx=x-1:goto dianelsif k$="keya6" thenx=x+1:goto dianelsif k$="keya7" thengoto xm:filabel xm?@(xx,3)"+"k$=inkey$if k$="keya5" and xx>5 then:?@(xx,3)" ":xx=xx-5:goto xmelsif k$="keya6" and xx<21 then:?@(xx,3)" ":xx=xx+5:goto xmelsif k$="keya7" then?@(xx,3)" "goto pdelse:goto xm:filabel pdif xx=1 then:if c=1 then:c=-1:goto dian:else:c=1:goto dian:fi:fiif xx=6 then:goto dz:fiif xx=11 then:goto dy:fiif xx=16 then:goto kg:fiif xx=21 thenclear screen?@(3,7)"原作者不详.":?@(3,15)"Improved by Moyu."?@(1,19):end:filabel dz?@(1,4)"选择方位"?@(1,5)"上曲向上,下曲向下,播放向右,停止向左."k$=inkey$?@(1,4)"        "?@(1,5)"                                    "if k$="keya3" thenbox map(x,y+4) to map(x+30,y-4)x=x+31elsif k$="keya4" thenbox map(x,y+4) to map(x-30,y-4)x=x-31elsif k$="keya5" thenbox map(x+4,y) to map(x-4,y-30)y=y-31elsif k$="keya6" thenbox map(x+4,y) to map(x-4,y+30)y=y+31elsif k$="keya7" thengoto dian:figoto dianlabel kgline x,y to x+17,y-9circle x,y,2x=x+15goto dianlabel dyline x+1,y-5 to x+1,y+5line x+5,y-10 to x+5,y+10x=x+6goto dian